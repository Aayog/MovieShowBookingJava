<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping
	package="com.myshowbooking.main.movie.model">
	<class name="EventModel" table="event_table">
		<id name="eventid" column="EVENT_ID">
			<generator class="uuid2" />
		</id>

		<property name="eventname" column="EVENT_NAME" />
		<property name="organizedby" column="ORGANIZED_BY" />
		<property name="eventdate" column="EVENT_DATE" />
		<property name="bookingOpenStatus"
			column="BOOKING_OPEN_STATUS" />
		<property name="ticketPrice" column="TICKET_PRICE" />
		<property name="location" column="LOCATION" />
		<property name="guest" column="GUEST" />
		<property name="imageUrl" column="IMAGEURL" />
		<property name="contact" column="CONTACT" />
		<property name="timeFrom" column="TIME_FROM" />
		<property name="duration" column="DURATION" />
	</class>
</hibernate-mapping>